@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                <a href="@Url.Action("Edit", "Product", new { id = item.Id })">Edit</a> |
                <a href="@Url.Action("Delete", "Product", new { id = item.Id })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a href="@Url.Action("Create", "Product")">Create New Product</a>