@model IEnumerable<Book>

@{
    ViewData["Title"] = "Books List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>TomeNumber</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.TomeNumber</td>
            <td>
                <a href="@Url.Action("Edit", "Book", new { id = item.Id })">Edit</a> |
                <a href="@Url.Action("Delete", "Book", new { id = item.Id })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a href="@Url.Action("Create", "Book")">Create New Book</a>